<h1>Flickr Photo Feed App</h1>

<%= form_for :user, url: root_url do |f| %>
  Flicker id: <%= f.text_field :flickr_id %>

  <%= f.submit "Show feed" %>
<% end %>

<% if @photos %>
  <h3>Photos for user id <%= @flickr_id %>:</h3>
  <% @photos.each do |photo| %>
    <% info = flickr.photos.getInfo(photo_id: photo.id) %>
    <%= link_to image_tag(FlickRaw.url_m(info)), FlickRaw.url_photopage(info) %>
  <% end %>
<% end %>
